{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-S",
                ".",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": "build",
            "detail": "Configure CMake project",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Debug",
                "-j",
                "4"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "configure",
            "detail": "Build the chess engine",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build-release",
                "-S",
                ".",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "group": "build",
            "detail": "Configure and build release version"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "clean"
            ],
            "group": "build",
            "detail": "Clean build artifacts"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./build/src/biggerbot_chess",
            "dependsOn": "build",
            "group": "test",
            "detail": "Run the chess engine",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            }
        }
    ]
}